  <header class='header row g-0'>
    <div class="col-3">
      {{> logo}}
    </div>

    <nav class='header_nav col-9 '>
      <div class="header_nav_right">
        {{>nav list=header}}
      </div>
    </nav>
  </header>

<main class="main">
  {{#with info}}
    <div class="info">
      <h1 class="info_title">{{title}}</h1>
      <p class="info_text">{{description}}</p>
    </div>
  {{/with}}
  
  {{#with form}}
    <form class="form">
      <h2 class="form_title">{{title}}</h2>

      <div class="form_input_list">
        {{#each inputs}}
          <input type="{{type}}" placeholder="{{placeholder}}" class="form_input" name="{{name}}" id="form-input-{{id}}"/>
        {{/each}}
      </div>

      <div class="form_checkbox">
        <input type="checkbox" name="{{checkbox_name}}" id="{{checkbox.name}}"/>
        <div></div>
        <label for="{{checkbox.name}}">{{checkbox.label}}</label>
      </div>

      <button type="submit" class="form_button">{{button}}</button>
      <p class="form_info">{{info}}</p>
    </form>
  {{/with}}
</main>

{{#with updates}}
  <section class="updates">
    <div class="updates_list">
      <strong class="updates_title">{{title}}</strong>
      {{#each list}}
      <div class="list_item">
        <div class="list_img">
          <img src="https://picsum.photos/32/32" alt="image">
        </div>
        <div class="list_content">
          <span class="list_username">{{nickname}}</span>
          <p class="list_text">{{description}}</p>
        </div>
      </div>
      {{/each}}
    </div>

     <div class="updates_button">
      <a href="{{show_all.url}}" class="updates_link">{{show_all.text}}</a>
    </div>
  </section>
{{/with}}


  {{#with expirience}}
  <article class="expirience">
    <div class="expirience_hero">
      <h2 class="expirience_title">{{title}}</h2>
      <div class="expirience_badge">
        <div class="badge_text">{{badge}}</div> <!-- Текст бейджа -->
      </div>
      
      <div class="expirience_list">
        {{#each list}}
        <div class="list_card">
            <strong class="list_name">{{name}}</strong>
            <p class="list_text">{{details}}</p>
        </div>
        {{/each}}
      </div>

    </div>
  </article>
  {{/with}} 


  <footer class="footer">
    <div>
      {{> logo}}
      <span class="footer_copyright">Copyright 2023-2024</span>
    </div>

    {{#each footer}}
      <div>
        <span class="footer_title">{{title}}</span>
        {{>nav list=links isVertical=true}}
      </div>
    {{/each}}
  </footer>

