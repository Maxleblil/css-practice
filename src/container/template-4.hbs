  <header class='header row g-0'>
    <div class="col-3">
      {{> logo}}
    </div>

    <nav class='header_nav col-9 '>
      <div class="header_nav_right">
        {{>nav list=header}}
      </div>
    </nav>
  </header>

  {{#with main}}
    <div class="main">
      <img src="{{image}}" alt="image" class="main_image">
      <div class="main_content">
        <h1 class="main_title">{{heading}}</h1>
        <p class="main_text">{{description}}</p>
        <a href="{{href}}" class="button main_button">{{button}}</a>
      </div>
      
    </div>
  {{/with}}


  <section class="featured">
    {{#each featured}}
     {{> cardFeatured data=this}}
    {{/each}}
  </section>

  <div class="actions">
    {{#each actions}}
      <div class="actions_content">
          <h3 class="actions_heading">{{heading}}</h3>
        <button class="actions_button">
          <a href="{{url}}" class="actions_text">{{text}}</a>
        </button>
      </div>
    {{/each}}
  </div>

  <footer class="footer">
    <div>
      {{> logo}}
      <span class="footer_copyright">Copyright 2023-2024</span>
    </div>

    {{#each footer}}
      <div>
        <span class="footer_title">{{title}}</span>
        {{>nav list=links isVertical=true}}
      </div>
    {{/each}}
  </footer>

